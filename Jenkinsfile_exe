pipeline {
  agent any
  parameters {
    string(name: 'MESSAGE', defaultValue: 'HELLO', description: 'Enter your message')
  }
  stages {
    stage('Create') {
      steps {
        echo "Hello Jenkins!"
      }
    }
    stage('Execute Shell') {
      steps {
        sh'''
          mkdir exe02_folder
          echo success >> exe02_folder/exe02_file
        '''
      }
    }
    stage('Print Parameter') {
      steps {
        echo "message: ${params.MESSAGE}"
      }   
    }
  }
}
